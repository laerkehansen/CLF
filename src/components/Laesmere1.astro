<script>
  document.querySelector(".btn").addEventListener("mouseover", musOver);
  document.querySelector(".btn").addEventListener("mouseout", musUd);
  function musOver(evt) {
    console.log(
      "MUS OVER",
      evt.currentTarget.querySelector(".arrow").classList.add("animate")
    );
  }
  function musUd(evt) {
    console.log(
      "MUS UD",
      evt.currentTarget.querySelector(".arrow").classList.remove("animate")
    );
  }
</script>
